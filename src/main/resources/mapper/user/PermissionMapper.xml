<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kazma233.blog.dao.user.PermissionDao">

    <resultMap id="BaseResultMap" type="com.kazma233.blog.entity.permission.Permission">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="permission_name" jdbcType="VARCHAR" property="permissionName"/>
        <result column="permission_description" jdbcType="VARCHAR" property="permissionDescription"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        permission_name,
        permission_description,
        create_time
    </sql>

    <select id="queryPermissionByIds" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM blog_permission_table
        WHERE blog_permission_table.id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="queryPermissionByCondition" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from blog_permission_table
        <where>
            <if test="permissionName != null">
                permission_name like "%"#{permissionName,jdbcType=VARCHAR}"%"
            </if>
            <if test="permissionDescription != null">
                AND permission_description like "%"#{permissionDescription,jdbcType=VARCHAR}"%"
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <insert id="insert" parameterType="com.kazma233.blog.entity.permission.Permission">
        insert into blog_permission_table
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="permissionName != null">
                permission_name,
            </if>
            <if test="permissionDescription != null">
                permission_description,
            </if>
            <if test="createUid != null">
                create_uid,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=VARCHAR},
            </if>
            <if test="permissionName != null">
                #{permissionName,jdbcType=VARCHAR},
            </if>
            <if test="permissionDescription != null">
                #{permissionDescription,jdbcType=VARCHAR},
            </if>
            <if test="createUid != null">
                #{createUid,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.kazma233.blog.entity.permission.vo.PermissionUpdate">
        update blog_permission_table
        <set>
            <if test="permissionName != null">
                permission_name = #{permissionName,jdbcType=VARCHAR},
            </if>
            <if test="permissionDescription != null">
                permission_description = #{permissionDescription,jdbcType=VARCHAR},
            </if>
        </set>
        WHERE id = #{id,jdbcType=VARCHAR}
    </update>

</mapper>