<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kazma233.blog.dao.user.UserDao">

    <resultMap id="Users" type="com.kazma233.blog.entity.user.User">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="enable" jdbcType="VARCHAR" property="enable"/>
        <result column="role_id" jdbcType="VARCHAR" property="roleId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        username,
        `password`,
        `enable`,
        role_id,
        create_time
    </sql>

    <update id="updateRole">
        update user_table set role_id = #{roleId} where id = #{uid}
    </update>

    <update id="updatePassword">
        update user_table set password = #{password} where id = #{uid}
    </update>

    <select id="queryAllUserByArgs" parameterType="com.kazma233.blog.entity.user.vo.UserQuery"
            resultType="com.kazma233.blog.entity.user.vo.UserRoleVO">
        select ut.*, brt.role_name, brt.description from user_table ut left join
        blog_role_table brt on ut.role_id = brt.id
        <where>
            <if test="username != null">
                ut.username like "%"#{username}"%"
            </if>
            <choose>
                <when test="startTime != null and endTime == null">
                    and ut.create_time &gt; #{startTime}
                </when>
                <when test="startTime == null and endTime != null">
                    and ut.create_time &lt; #{endTime}
                </when>
                <when test="startTime != null and endTime != null">
                    and ut.create_time between #{startTime} and #{endTime}
                </when>
            </choose>
        </where>
        <if test="limit != null">
            limit #{limit}
        </if>
        <if test="offset != null">
            offset #{offset}
        </if>
    </select>

    <!-- 注册用户 -->
    <insert id="insert" parameterType="com.kazma233.blog.entity.user.User">
        insert into user_table
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="username != null">
                username,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="enable != null">
                enable,
            </if>
            <if test="roleId != null">
                role_id,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=VARCHAR},
            </if>
            <if test="username != null">
                #{username,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                #{password,jdbcType=VARCHAR},
            </if>
            <if test="enable != null">
                #{enable,jdbcType=VARCHAR},
            </if>
            <if test="roleId != null">
                #{roleId,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                #{createTime,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>

</mapper>